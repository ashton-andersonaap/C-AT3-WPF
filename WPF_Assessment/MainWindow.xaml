<Window x:Class="WPF_Assessment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recruitment System" Height="600" Width="900" MinHeight="500" MinWidth="800">

    <!-- Window Background Image -->
    <Window.Background>
        <ImageBrush ImageSource="Images/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid Margin="10">
        <!-- Two columns: left for inputs, right for lists -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel: Contractor + Job Inputs -->
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,10,0">
            <!-- Contractor Inputs -->
            <Label Content="First Name" Foreground="White"/>
            <TextBox x:Name="textBox_firstName" Width="200" Background="#E6F9E6" Foreground="White"/>

            <Label Content="Last Name" Margin="0,5,0,0" Foreground="White"/>
            <TextBox x:Name="textBox_lastName" Width="200" Background="#E6F9E6" Foreground="White"/>

            <Label Content="Start Date" Margin="0,5,0,0" Foreground="White"/>
            <DatePicker x:Name="datePicker_startDate" Width="200" Background="#E6F9E6" Foreground="White"/>

            <Label Content="Hourly Wage" Margin="0,5,0,0" Foreground="White"/>
            <TextBox x:Name="textBox_hourlyWage" Width="200" Background="#E6F9E6" Foreground="White"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button x:Name="button_addContractor" Content="Add Contractor" Width="120" Background="LightBlue" Foreground="White" Click="button_addContractor_Click"/>
                <Button x:Name="button_showContractors" Content="Show Contractors" Width="120" Margin="5,0,0,0" Background="LightBlue" Foreground="White" Click="button_showContractors_Click"/>
            </StackPanel>

            <Button x:Name="button_removeContractor1" Content="Remove Contractor" Width="245" Margin="0,5,0,0" Background="LightBlue" Foreground="White" Click="button_removeContractors_Click"/>
            <Button x:Name="button_showAvailablecontractors" Content="Show Available Contractors" Width="245" Margin="0,5,0,0" Background="LightBlue" Foreground="White" Click="button_showAvailablecontractors_Click"/>

            <!-- Job Inputs -->
            <Label Content="Job Title" Margin="0,10,0,0" Foreground="White"/>
            <TextBox x:Name="textBox_jobTitle" Width="200" Background="#E6F9E6" Foreground="White"/>

            <Label Content="Date" Margin="0,5,0,0" Foreground="White"/>
            <DatePicker x:Name="datePicker_jobDate" Width="200" Background="#E6F9E6" Foreground="White"/>

            <Label Content="Cost" Margin="0,5,0,0" Foreground="White"/>
            <TextBox x:Name="textBox_jobCost" Width="200" Background="#E6F9E6" Foreground="White"/>

            <Label Content="Completed" Margin="0,5,0,0" Foreground="White"/>
            <ComboBox x:Name="comboBox_completed" Width="200" Background="#E6F9E6" Foreground="White">
                <ComboBoxItem Foreground="Black">Yes</ComboBoxItem>
                <ComboBoxItem Foreground="Black">No</ComboBoxItem>
            </ComboBox>

            <Label Content="Assigned To" Margin="0,5,0,0" Foreground="White"/>
            <ComboBox x:Name="comboBox_assigning" Width="200" Background="#E6F9E6" Foreground="White"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button x:Name="button_addJob" Content="Add Job" Width="120" Background="LightBlue" Foreground="White" Click="button_addJob_Click"/>
                <Button x:Name="button_getJob" Content="Get Jobs" Width="120" Margin="5,0,0,0" Background="LightBlue" Foreground="White" Click="button_getJob_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button x:Name="button_showUnassignedjobs" Content="Show Unassigned Jobs" Width="120" Background="LightBlue" Foreground="White" Click="button_showUnassignedjobs_Click"/>
                <Button x:Name="button_completeJob" Content="Complete Job" Width="120" Margin="5,0,0,0" Background="LightBlue" Foreground="White" Click="button_completeJob_Click"/>
            </StackPanel>

        </StackPanel>

        <!-- Right panel: ListBoxes -->
        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Label Content="Contractors" Margin="0,0,0,5" Foreground="White"/>
            <ListBox x:Name="listBox_contractors" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="200" Background="#E6F9E6" Foreground="White"/>

            <Label Content="Jobs" Margin="0,10,0,5" Foreground="White"/>
            <ListBox x:Name="listbox_jobs" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="200" Background="#E6F9E6" Foreground="White"/>

            <Button Content="Show All Jobs" Width="120" Margin="0,5,0,0" Background="LightBlue" Foreground="White" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Window>
